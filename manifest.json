{
  "manifest_version": 3,
  "name": "WhatsApp Bot",
  "description": "bot para baixar dados do WhatsApp Web",
  "version": "2.0.2",
  "minimum_chrome_version": "123",
  "icons": {
    "16": "src/images/icon-16.png",
    "32": "src/images/icon-32.png",
    "48": "src/images/icon-48.png",
    "128": "src/images/icon-128.png"
  },
  "host_permissions": ["https://*.whatsapp.com/*"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Baixar dados",
    "default_icon": {
      "16": "src/images/icon-16.png",
      "32": "src/images/icon-32.png",
      "48": "src/images/icon-48.png",
      "128": "src/images/icon-128.png"
    }
  },
  "permissions": ["scripting", "activeTab", "alarms"]
}
